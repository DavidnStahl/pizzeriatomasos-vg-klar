@model CreateRoleViewModel

@{ 
    ViewBag.Title = "Skapa ny roll";
}

    
    <div class="card" style="margin-top:5%">
        <div class="row">
            
            <div class="card-body">
                <div class="col-md-12">
                    <form asp-action="CreateRole" asp-controller="RoleAdmin" method="post">
                        <div class="form-group">
                            <label >Skapa roll</label>
                            <input asp-for="RoleName" class="form-control" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary" style="width:auto">Skapa roll</button>
                    </form>
                </div>
            </div>

            
        </div>
    </div>
